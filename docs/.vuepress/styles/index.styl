div[class*="language-"] {
    margin-top:1rem;
    margin-bottom:3.5rem;
    background-color: #36444B;
}

p {
margin-top: 1.5rem;
}

.alert {
   margin-top: 1.5rem;
   border-left: 4px solid transparent;
   padding: 1rem 1.5rem;
   line-height: 1.8;
}

.alert--info {
   border-color: #2b79c1;
   background-color: #eff3f6;
   color: #2b79c1;
}

.alert--danger {
   border-color: #c14544;
   background-color: #f9e9ea;
   color: #c14544;
}

.alert--success {
   border-color: #55ad72;
   background-color: #e6f3ef;
   color: #55ad72;
}

.video-block {
  position: relative;
  margin-top: 2rem;
  padding-bottom: 56.25%; /* 16:9 */
  height: 0;
  overflow: hidden;
  width: 100%; height: auto;
 }

.video-block iframe {
  position: absolute;
  top: 0; left: 0;
  width: 100%; height: 100%;
}